{
  "collection": "@nestjs/schematics",
  "sourceRoot": "src/domain",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": false,
    "webpackConfigPath": "webpack.config.js",
    "assets": [
      {
        "include": "**/*.mjs"
      }
    ],
    "plugins": [
      "@nestjs/swagger/plugin"
    ]
  },
  "generateOptions": {
    "spec": false
  },
  "projects": {
    "lib": {
      "type": "library",
      "root": "libs/lib",
      "entryFile": "index",
      "sourceRoot": "libs/lib/src",
      "compilerOptions": {
        "tsConfigPath": "libs/lib/tsconfig.lib.json"
      }
    }
  }
}