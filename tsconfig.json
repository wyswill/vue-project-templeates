{
  "compilerOptions":{
    "module"                      :"commonjs",
    "declaration"                 :true,
    "removeComments"              :true,
    "emitDecoratorMetadata"       :true,
    "experimentalDecorators"      :true,
    "allowSyntheticDefaultImports":true,
    "target"                      :"es2017",
    "sourceMap"                   :true,
    "outDir"                      :"./dist",
    "baseUrl"                     :"./",
    "incremental"                 :true,
    "typeRoots"                   :[
      "./src/types",
      "./node_modules/@types"
    ],
    "paths"                       :{
      "@app/app"  :[
        "libs/app/src/log",
        "libs/app/src/auth",
        "libs/app/src"
      ],
      "@app/app/*":[
        "libs/app/src/*"
      ],
      "@util/*"   :[
        "src/util/*"
      ]
    }
  }
}
